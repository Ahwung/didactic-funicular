<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head.ejs %>
    </head>
    <body>
        <div class="container">
            <% include ../partials/header.ejs %>
            <h1>Add a new restaurant</h1>
            <div class="create-form">
                <form action="/restaurants" method="POST">
                    <fieldset class="restaurant-info">
                        <legend>Restaurant Details</legend>
                        <div class="form-group">
                            <label for="name">NAME</label>
                            <input
                                type="text"
                                class="form-control"
                                name="name"
                                placeholder="Name of restaurant"
                            />
                        </div>
                        <div class="form-group">
                            <label for="name">IMAGE</label>
                            <input
                                type="text"
                                class="form-control"
                                name="img"
                                placeholder="Image URL"
                            />
                        </div>
                        <div class="form-group">
                            <label for="name">CUISINE</label>
                            <input
                                type="text"
                                class="form-control"
                                name="cuisine"
                            />
                        </div>
                        <div class="form-group">
                            <label for="name">CITY</label>
                            <input
                                type="text"
                                class="form-control"
                                name="city"
                            />
                        </div>
                        <div class="form-group">
                            <label for="name">ADDRESS</label>
                            <input
                                type="text"
                                class="form-control"
                                name="address"
                            />
                        </div>
                        <div class="form-group">
                            <label for="name">POPULAR DISHES</label>
                            <input
                                type="text"
                                class="form-control"
                                name="dishes"
                            />
                        </div>
                    </fieldset>
                    <input type="submit" value="CREATE" />
                </form>
            </div>
        </div>
    </body>
</html>
